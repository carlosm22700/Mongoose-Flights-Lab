    <br>

    <h2>Destinations</h2>
    <% if (flight.destinations.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Airport</th>
                    <th>Arrival</th>
                </tr>
            </thead>
            <tbody>
                <% flight.destinations.forEach(d => { %>
                    <tr>
                        <td><%= d.airport %></td>
                        <td><%= d.arrival %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <h5>No Destinations Have Been Added</h5>
    <% } %>

    <br>
    
    <h2>Add Flight Destination</h2>
    <form method="POST" action="/flights/<%= flight._id %>/details">
        <label>Airport:
            <select name="airport">
                <option value="DEN">AUS</option>
                <option value="AUS">DEN</option>
                <option value="DFW">DFW</option>
                <option value="LAX">FAT</option>
                <option value="SAN">LAX</option>
                <option value="SAN">PDX</option>
            </select>
        </label><br>
        <label>Arrives:
            <input type="datetime-local" name="arrival">
        </label><br>
        <button type="submit">Add Destination</button>
    </form>
